<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   logicalFilePath="db.changelog.netify.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="testautomatisering@duo.nl" id="netify.table.role.create" runAlways="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="TA_ROLE"/>
            </not>
        </preConditions>
        <comment>Create table TA_ROLE if not exists</comment>
        <createTable tableName="TA_ROLE">
            <column autoIncrement="true" startWith="2500" name="ID" type="INTEGER">
                <constraints nullable="false" primaryKey="true"/></column>
            <column name="CHARACTER" type="VARCHAR(255)"/>
            <column name="ROLE_ORDER" type="SMALLINT"/>
            <column name="ACTOR_ID" type="INTEGER"/>
            <column name="MOVIE_ID" type="INTEGER"/>
        </createTable>
    </changeSet>

    <changeSet author="testautomatisering@duo.nl" id="netify.role.loaddata" runAlways="true">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="TA_ROLE"/>
        </preConditions>
        <comment>Load data from csv</comment>
        <loadData encoding="UTF-8"
                  relativeToChangelogFile="true"
                  file="TA_ROLE.csv"
                  separator=";"
                  tableName="TA_ROLE">
        </loadData>
    </changeSet>

</databaseChangeLog>
